%br
%br
= form_for(@question, url: questions_path) do |f|
  = f.label "Please Enter a Question", class: "redtext"
  %br
  %br
  = f.text_area :text, placeholder: "Please enter a question", class: "blacktext"
  %br
  %br
  = f.collection_select(:topic_id, Topic.all, :id, :name)
  %br
  %br
  = f.submit "Post", class: "btn btn-large btn-default"
